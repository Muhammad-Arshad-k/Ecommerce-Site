   <%- include('../partials/aHeader.ejs') %>
      <section class="body-section">
        
        <div class="w-100 d-flex flex-column">
          <h3 class="i-names align-self-center">Subcategory</h3>
          <div class="ms-3">
          <a href="/admin/home/category" class="btn btn-success mb-4">Category</a>
          </div>
        </div>
        
        <div class="container">
          <div class="table-responsive">
              <table class="table align-middle" style="text-align: center;" id="sctable">
                <thead>
                  <tr>
                      <th scope="col" class="text-center">Subcategory Name</th>
                      <th scope="col" class="text-center">Category</th>
                      <th scope="col" class="text-center">Options</th>
                  </tr>
                </thead>
                <tbody>
                    <% allData.forEach(data => { %>
                        <tr>
                            <td><%= data.sub_category_name %> </td>
                            <td><%= data.cate.category_name %> </td>
                            <td>
                                <a href="/admin/edit/subcategory/<%= data._id %> " class="btn btn-danger btn-sm">Edit</a>
                                <a href="" class="btn btn-warning btn-sm">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
              </table>
              <div class="d-flex justify-content-center">
                <a href="/admin/home/subcategory/add" class="btn btn-success">Add</a>
              </div>
            </div>
    </section>
    <br> 
    </body>
    <script>
    $("#menu-btn").click(function () {
      $("#menu").toggleClass("active");
    });
    $(document).ready(function () {
    $('#sctable').DataTable();
    });
  </script>
  <style>
    #menu .items li:nth-child(3) {
      border-left: 4px solid #fff;
    }
