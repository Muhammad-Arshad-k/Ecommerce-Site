<%-include("../partials/header")%>

  <div class="bg-light py-3">
    <div class="container">
      <div class="row">
        <div class="col-md-12 mb-0"><a href="/index">Home</a> <span class="mx-2 mb-0">/</span> <strong
            class="text-black">Tank Top T-Shirt</strong></div>
      </div>
    </div>
  </div>

  <div class="site-section">
    <div class="container">

      <div class="row">
        <div class="col-md-6">
          <img src="adminImages/<%=product._id%>.jpg" alt="Imageview" style="width:80%;height:85%;" class="img-fluid">
        </div>

        <div class="col-md-6">
          <h2 class="text-black">
            <%=product.name%>
          </h2>
          <p>
            <%=product.description%>
          </p>

          <p><strong class="text-primary h4">
              <%=product.price%>â‚¹
            </strong></p>
          <b>Select Size</b>
          <form action="/cart/<%=product._id%>" method="post">
            <div class="mb-4 d-flex ">

              <% product?.size.forEach(s=> { %>
                <label class="radio p-2">
                  <span>
                    <%= s %>
                  </span> <br>
                  <input type="radio" name="size" value="<%= s %> " checked />

                </label>
                <% }) %>
            </div>
            <div class="row p-2">
              <button type="submit" value="submit"><a class="buy-now btn btn-sm btn-primary ">Add To Cart</a></button>
              <p><a href="/wishlist/<%=product._id%>" class="icon icon-heart-o btn btn-link ml-2"><sub>+</sub></a></p>
            </div>
          </form>




        </div>
      </div>

    </div>
  </div>



  <%-include("../partials/footer")%>